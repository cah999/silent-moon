<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Фон -->
            <item android:width="46dp" android:height="46dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/home_icon" android:gravity="center" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <!-- Фон -->
            <item android:width="46dp" android:height="46dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/home_icon_unselected" android:gravity="center" />
        </layer-list>
    </item>
</selector>