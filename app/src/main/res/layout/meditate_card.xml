<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="@dimen/margin_20dp">

    <ImageView
        android:id="@+id/meditate_card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/meditate_card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meditate_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/base_margin"
        android:textSize="@dimen/topic_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/meditate_card_background"
        app:layout_constraintEnd_toEndOf="@id/meditate_card_background"
        app:layout_constraintStart_toStartOf="@id/meditate_card_background" />

</androidx.constraintlayout.widget.ConstraintLayout>