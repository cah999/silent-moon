<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/meditate_card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/meditate_card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meditate_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/topic_font"
        app:layout_constraintBottom_toBottomOf="@id/meditate_card_background"
        app:layout_constraintEnd_toEndOf="@id/meditate_card_background"
        app:layout_constraintStart_toStartOf="@id/meditate_card_background" />

</androidx.constraintlayout.widget.ConstraintLayout>