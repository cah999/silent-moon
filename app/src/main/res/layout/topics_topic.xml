<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_20dp">

    <ImageView
        android:id="@+id/topic_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/topics_topic_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:textSize="@dimen/topic_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/topic_background"
        app:layout_constraintEnd_toEndOf="@id/topic_background"
        app:layout_constraintStart_toStartOf="@id/topic_background" />
</androidx.constraintlayout.widget.ConstraintLayout>